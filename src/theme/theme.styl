@import "base"
@import "font"

$font-family = 'Fira Sans', arial
html
  height: 100%

body
  height: 100%
  font-family: $font-family
  font-weight: $font-weight
  font-size: $font-size
  line-height: $line-height
  color: $white-color
  background-color: $dark-color
  margin: 0
a
  color: $link-color
  text-decoration: none
  &:hover
    color: $link-hover-color
    text-decoration: none
h1,
h2
  margin-bottom: 20px
h3,
h4,
h5,
h6
  font-size: 16px
  margin-bottom: 20px
